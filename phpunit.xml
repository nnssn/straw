<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php">
	<php>
		<ini name="error_reporting" value="-1" />
	</php>

	<testsuites>
		<testsuite name="Straw Test Suite">
			<directory>./tests/</directory>
		</testsuite>
	</testsuites>

	<filter>
